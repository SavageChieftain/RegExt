{
    "markdownlint.config": {
        "default": true,
        "MD013": {
            "line_length": 120,
            "code_blocks": false,
            "tables": false,
            "headings": false
        },
        "MD033": {
            "allowed_elements": [
                "br",
                "kbd",
                "sub",
                "sup",
                "img",
                "details",
                "summary"
            ]
        },
        "MD041": false,
        "MD034": false,
        "MD035": {
            "style": "---"
        },
        "MD049": {
            "style": "asterisk"
        },
        "MD050": {
            "style": "asterisk"
        },
        "MD032": false,
        "MD031": false,
        "MD022": false,
        "MD040": {
            "allowed_languages": [],
            "language_only": false
        }
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "[markdown]": {
        "editor.defaultFormatter": "davidanson.vscode-markdownlint",
        "editor.formatOnSave": true,
        "editor.rulers": [
            120
        ],
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120
    }
}
